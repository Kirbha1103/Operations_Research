   "source": [
    "import math\n",
    "import sympy as sy\n",
    "\n",
    "h_values=[1,0.1,0.001,0.002,0.0001,0.0000000001] #given list of h\n",
    "#0.0000000001=1e-10\n",
    "for h in h_values:\n",
    "   val = math.log(1+h)/h\n",
    "   print(f\"h at {h}: {val} \")\n",
    "\n",
    "#calculation using sympy\n",
    "h= sy.symbols('h')\n",
    "expression = sy.log(1+h)/h\n",
    "\n",
    "#computing limit as h->0\n",
    "limit=sy.limit(expression,h,0)\n",
    "\n",
    "# calculating derivation of ln(x)\n",
    "x= sy.symbols('x')\n",
    "derivative = sy.diff(sy.log(x),x)\n",
    "derivative_at_1 = derivative.subs(x,1)\n",
    "print(\"limit of ln(1+h)/h\",limit)\n",
    "print(\"derivative of ln(x):\",derivative)\n",
    "print(\"derivative at x=1:\",derivative_at_1)"
   ]
